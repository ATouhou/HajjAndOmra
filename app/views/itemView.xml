<Alloy>
	<Collection src="Item">
	<ListView>
		<Templates>
			
			<ItemTemplate name="itemName">
				<Label bindId='name'></Label>
				<Label bindId='details'></Label>
			</ItemTemplate>
			
			</Templates>
			<ListSection dataCollection='Catagory'>
				<ListItem name:text="name" details:text='details' template="itemName"></ListItem>
			</ListSection>
	</ListView>
</Alloy>