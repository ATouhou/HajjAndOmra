<Alloy>
	<Window id="win" class='container' navBarHidden="true">
		<Widget src="com.hashapps.widgets.titlebar" id="header"/>
		<TextField id="placeTitle"></TextField>
		<TextArea id="placeDescription"></TextArea>
		<View id="mapView" ns="Ti.Map" animate="true"
		regionFit="true" 
		mapType="Ti.Map.STANDARD_TYPE" onClick="mapClicked">
			<ImageView id="getMyloc" onClick="checkGPS"></ImageView>
		</View>
		<Button id="save" onClick="savePlace"></Button>
	</Window>
</Alloy>